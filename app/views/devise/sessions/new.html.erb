<div class="container mt-4 mb-2">
  <div class="row justify-content-center">
    <div class="col-6">
      <h2>DEMO Log in</h2>
      <p>If you want to test the booking process, you can login with our test data.</p>
      <p><strong>Email:</strong> flora@plantscape.com <strong>Password:</strong> 123456</p>
      <p><strong>TEST Credit Card No.:</strong> 4242 4242 4242 4242 <strong>Exp. Date:</strong> 12/22 <strong>CVC:</strong> 123</p>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-sm big-yellow-button shadow px-5 py-3 mb-5 text-right" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
