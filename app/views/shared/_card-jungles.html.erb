<div class="container">
  <% @jungles.each do |jungle| %>
    <div class="card mb-3">
      <% if life.photo.attached? %>
            <%= cl_image_tag jungle.photo.key, class: "card-img-top"%>
          <% else %>
            <%= image_tag("https://source.unsplash.com/random", class: "card-img-top") %>
          <% end %>
          <% if policy(jungle).edit? %>
            <div class="btn-group position-absolute" role="group">
              <button id="btnGroupDrop1" type="button" class="btn btn-outline-secondary dropdown-toggle no-border" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-cog"></i>
              </button>
              <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                <%= link_to "ğŸ”¨ Edit", edit_jungle_path(jungle), class: "dropdown-item"%>
                <%= link_to "âŒ Delete", jungle_path(jungle), method: :delete, class:"dropdown-item"%>
              </div>
            </div>
          <% end %>
      <div class="card-body">
        <h5 class="card-title"><%= jungle.name.titleize %></h5>
        <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
        <p class="card-text"><small class="text-muted">ğŸ“ <%= jungle.address %></small></p>
      </div>
    </div>
  <% end %>
</div>
